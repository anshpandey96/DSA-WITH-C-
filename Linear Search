#include<stdio.h>
int linear_search(int arr[], int n, int search) {
    for (int i = 0; i < n; i++) {
        if (arr[i] == search)
            return i;
    }
    return -1;
}

int main (){
  int array[100], n, search, position;
  printf("\nEnter the element in array :");
  scanf("%d", &n);
   printf( " Enter %d number : ",n);
   for ( int i= 0; i< n; i++ )
   {
     scanf( "%d" , &array[i]);
   }

    printf("Enter the number what do you want to search :");
     scanf("%d", &search );
     position = linear_search( array ,n ,search);
      if ( position == -1){
        printf( "\n %d is not present in array " , search);
      }
      else 
      {
        printf("%d is present at location %d ",search,position+1);

      }
   
     return 0;
}
